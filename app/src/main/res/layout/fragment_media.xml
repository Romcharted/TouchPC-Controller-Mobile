<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MediaFragment"
    android:background="@color/primary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >
        <ImageView
            android:id="@+id/btnUp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="20dp"
            android:clickable="true"
            app:srcCompat="@drawable/up_arrow"
            android:background="@drawable/button_media"
            android:scaleType="centerInside"
            android:layout_margin="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            >

            <Button
                android:id="@+id/goBack"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="10dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:clickable="true"
                android:text="-10s"
                android:background="@drawable/button_media"
                android:scaleType="centerInside"
                android:layout_margin="8dp"/>

            <ImageView
                android:id="@+id/playPause"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="15dp"
                android:clickable="true"
                app:srcCompat="@drawable/video_play_pause"
                android:background="@drawable/button_media"
                android:scaleType="centerInside"
                android:layout_margin="8dp"/>

            <Button
                android:id="@+id/moveForward"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="10dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:clickable="true"
                android:text="+10s"
                android:background="@drawable/button_media"
                android:scaleType="centerInside"
                android:layout_margin="8dp"/>
        </LinearLayout>


        <ImageView
            android:id="@+id/btnDown"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="20dp"
            android:clickable="true"
            app:srcCompat="@drawable/down_arrow"
            android:background="@drawable/button_media"
            android:scaleType="centerInside"
            android:layout_margin="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/previous"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="20dp"
            android:clickable="true"
            app:srcCompat="@drawable/previous"
            android:background="@drawable/button_media"
            android:scaleType="centerInside"
            android:layout_margin="8dp"/>
            />

        <ImageView
            android:id="@+id/next"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="23dp"
            android:clickable="true"
            app:srcCompat="@drawable/next"
            android:background="@drawable/button_media"
            android:scaleType="centerInside"
            android:layout_margin="8dp"/>
            />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/volumeDown"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="20dp"
                android:clickable="true"
                app:srcCompat="@drawable/speaker_wave"
                android:background="@drawable/button_media"
                android:scaleType="centerInside"
                android:layout_margin="8dp"/>
                />

            <ImageView
                android:id="@+id/volumeUp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="20dp"
                android:clickable="true"
                app:srcCompat="@drawable/speaker_wave_2"
                android:background="@drawable/button_media"
                android:scaleType="centerInside"
                android:layout_margin="8dp"/>
                />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>